@model LionPOSServiceContractModels.ControllerContractModel.ProductManagement.ProductCCM

@for (int i = 0; i < Model.productList.Count(); i++)
            {

        <!--Grid Design -->

    <div class="col-md-12" id="@Model.productList[i].sku">
        <div class="card card-user card-user-purple">

            <div class="card-heading heading-center " style="border-top:none">
                <img src="~/Images/store.png" alt="" class="user-image">
                <h3 class="card-title text-color-white"><a href="#@Model.productList[i].sku" data-href="@Model.productList[i].title">@Model.productList[i].title</a></h3>
                <div class="subhead">
                    <span class="badge actv" style="background:@((Model.productList[i].isActive== true)?"Green":"Red");border:2px solid #fff;border-radius:100%;padding:2px 4px;font-size:12px;color:@((Model.productList[i].isActive== true)?"Green":"Red") ">3</span>
                    @*Product is <a href="#"> @((Model.productList[i].isActive == true) ? "Active" : "Inactive") in @Model.productList[i].CoveringAreas</a>*@
                </div>
            </div>

            <div class="card-body" id="card-body@(Model.productList[i].sku)" style="display:none;">

            </div>


            <div class="card-footer" style="padding: 15px;border-top: 1px solid #f0f0f0;">
                <div class="selectAllCheckBoxClass" style="float:left">
                    <div class="checkboxer checkboxer-pink form-inline">
                        <input type="checkbox" class="chkSelect" id="@(Model.productList[i].sku)">
                        <label for="checkboxColor2">
                        </label>
                    </div>
                </div>
                <button class="btn btn-xs btn-purple pull-right btn-ripple fa fa-retweet" data-sku="@(Model.productList[i].sku)" data-bodyid="card-body@(Model.productList[i].sku)" id="btnShowDetails" style="margin-right:10px"></button>
            </div>

        </div>
    </div>

    }
