@model LionPOSServiceContractModels.ControllerContractModel.ProductManagement.ProductCCM
@{
    ViewBag.Title = "Product";
    ViewBag.page = "Home";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

@section HeaderStyle
{
    <style>
        .group_column > div:first-child {
            border-left: none;
        }

        .group_column > div {
            border-left: #D1C7C7 1px solid;
        }

            .group_column > div:last-child {
                border-right: #D1C7C7 1px solid;
            }

        .ribbon > .tab-content {
            padding: 7px;
        }


        #tblCountry tbody tr:hover {
            background-color: #A2B5FF;
            cursor: pointer;
        }

        .row_selected {
            background-color: #5677fc;
            color: white;
        }

        .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
            width: 100%;
        }

        .bootstrap-select .btn {
            border: 1px solid;
            margin: 2px;
        }

        #sortable {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 60%;
        }

            #sortable li {
                margin: 0 3px 3px 3px;
                padding: 0.4em;
                padding-left: 1.5em;
                font-size: 15px;
                height: 36px;
                text-align: left;
                vertical-align: middle;
                border: 1px solid #337ab7;
                background: #337ab7;
                border-radius: 10px;
            }

        /*#sortable li span {
                    position: absolute;
                    margin-left: -1.3em;
                }*/


        .btn-CircleLoader::after {
            display: none;
            background: transparent url('../../fonts/fuji-spinner-1.0.1.svg') no-repeat 0 0;
            width: 28px;
            height: 28px;
            background-color: #4bae4f;
            border-radius: 50%;
        }
    </style>


}



@Html.Partial("~/Views/ProductManagement/Product/_FilterPane.cshtml")

@Html.Partial("~/Views/ProductManagement/Product/_ActionPane.cshtml")



@Html.Partial("~/Views/ProductManagement/Product/_ListPane.cshtml", Model)



@Html.Partial("~/Views/ProductManagement/Product/_DeleteConfirmPane.cshtml")



@section FooterScripts{

    @Html.Partial("~/Views/ProductManagement/Product/_ProductScripts.cshtml", Model)

}
