@model LionPOSServiceContractModels.ControllerContractModel.EmployeeManagement.EmployeeCCM

@for (int i = 0; i < Model.employeeList.Count(); i++)
{
    <div class="col-md-12" id="@Model.employeeList[i].employeeCode">
        <div class="card card-user card-user-purple">

            <div class="card-heading heading-center " style="border-top:none">
                <img src="~/Images/store.png" alt="" class="user-image">
                <h3 class="card-title text-color-white"><a href="#">@Model.employeeList[i].title</a></h3>
                <div class="subhead">
                    <span class="badge actv" style=" background : @((Model.employeeList[i].isActive== true)?"Green":"Red") ;border: 3px solid #fff;border-radius : 100%;padding : 2px 4px;font-size: 12px;color: @((Model.employeeList[i].isActive== true)?"Green":"Red") ">3</span>
                    @*Employee is <a href="#"> @((Model.employeeList[i].isActive == true) ? "Active" : "Inactive") in @Model.employeeList[i].</a>*@
                </div>
            </div>

            <div class="card-body" id="card-body@(Model.employeeList[i].employeeCode)" style="display:none;">

            </div>


            <div class="card-footer" style="padding: 15px;border-top: 1px solid #f0f0f0;">
                <div class="selectAllCheckBoxClass" style="float:left;">
                    <div class="checkboxer checkboxer-pink form-inline">
                        <input type="checkbox" class="chkSelect" id="@(Model.employeeList[i].employeeCode)">
                        <label for="checkboxColor2">
                        </label>
                    </div>
                </div>
                <button class="btn btn-xs btn-purple pull-right btn-ripple fa fa-retweet" data-employeecode="@(Model.employeeList[i].employeeCode)" data-bodyid="card-body@(Model.employeeList[i].employeeCode)" id="btnShowDetails" style="margin-right:10px"></button>
            </div>

        </div>
    </div>
}
