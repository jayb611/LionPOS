@model  LionPOS.Models.ViewModels.AccountManagement.Taxmaster.taxmasterCrudOperationViewModel
<div class="col-md-12" id="@Model.taxmasterDCM.taxMasterTitle">
    <div class="card card-user card-user-purple">

        <div class="card-heading heading-center " style="border-top:none">
            <img src="~/Images/store.png" alt="" class="user-image">
            <h3 class="card-title text-color-white"><a href="#@(Model.taxmasterDCM.taxMasterTitle)">@Model.taxmasterDCM.taxMasterTitle</a></h3>
            <div class="subhead">
                <span class="badge actv" style=" background: @((Model.taxmasterDCM.isActive== true)?"Green":"Red");border: 2px solid #fff;border-radius: 100%;padding: 2px 4px;font-size: 12px;color: @((Model.taxmasterDCM.isActive== true)?"Green":"Red")">3</span>
            </div>
        </div><!--.card-heading-->

        @if (Model.LoadFormFields == true)
           {
            <br />
            @Html.Raw(LionUtilities.MVCViewUtilitiesPkg.Helper.GetRazorViewAsString(Model, "~/Views/AccountManagement/Taxmaster/_InputFields.cshtml", Model.ControllerContext));

           }
           else
           {
                <!--.card-body-->
            <div class="card-body" id="card-body@(Model.taxmasterDCM.taxMasterTitle)" style="display:none">
            </div><!--.card-body-->
           }



        <div class="card-footer" style="padding: 15px;border-top: 1px solid #f0f0f0;">
            <div class="selectAllCheckBoxClass" style="float:left">
                <div class="checkboxer checkboxer-pink form-inline">
                    <input type="checkbox" id="@(Model.taxmasterDCM.taxMasterTitle)">
                    <label for="checkboxColor2">
                    </label>
                </div>
            </div>
            <button class="btn btn-xs btn-purple pull-right btn-ripple fa fa-retweet" data-taxmastertitle="@(Model.taxmasterDCM.taxMasterTitle)" data-bodyid="card-body@(Model.taxmasterDCM.taxMasterTitle)" id="btnShowDetails" style="margin-right:10px"></button>
        </div><!--.card-footer-->

    </div><!--.card-->
</div>
