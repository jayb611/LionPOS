                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/i/directory/profiles">© 2016 Lion Vision Info Tech Solutions(LVITS)</a></li>

                    </ul>

                </div><!-- /.navbar-collapse -->

            </div><!-- /.container-fluid -->
            @*<ul class="StreamsFooter-list u-cf">

                    <li class="StreamsFooter-item StreamsFooter-copyright">© 2016 Lion Vision Info Tech Solutions(LVITS)</li>

                </ul>*@
        </nav>
    </section>



    <!-- used to show direct login window or to show previous account listing
    true= to show login window
    false= to show previous account
        used on failed login attempt or failed captcha to enter direct password and username
        it is used in Chikaraks\Scripts\ScriptCustom\Login\Login\LoginScripts.js
    -->
    <script>
        var directloginWindowExecute = @((Model.showLoginWindowDirect)?"true":"false");

    </script>
    <script src="~/Scripts/jquery-2.2.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/ScriptCustom/Login/Login/LoginScripts.js"></script>

    <!-- Loads captcha view if captcha is activate after n attempt -->
    @if (Model.CaptchaActivated_Null_bool == true)
    {
        @Html.Partial("~/Views/Login/Login/_LoginCustomScript.cshtml", Model.CaptchaActivated_Null_bool)
    }
    <script>
        $("#needHelp").click(function(e){
            
            window.location = $("#needHelp").data("href").replace("%3Cchange%3E",$("#branchCode option:selected").val());
        });
    </script>

</body>
</html>
