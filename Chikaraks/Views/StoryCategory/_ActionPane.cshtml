@model Chikaraks.Models.ViewModels.StoryCategory.GetStoryCategoryVM
<div class="row">
    <div class="col-md-12">
        <div class="card card-meal card-meal-indigo card-square card-hover-shadow">
            <div class="card-heading">
                <div class="btn-group btn-merged btn-group-sm pull-left">
                    <button type="button" class="btn btn-orange btn-flat btn-ripple">
                        <div class="checkboxer checkboxer-pink" style="width:24px;position:relative;float: left;">
                            <input type="checkbox" value="" id="chkSelectAllData">
                            <label for="check1"></label>
                        </div>
                    </button>
                    <button type="button" class="btn btn-orange btn-flat btn-ripple">
                        <select name="" id="BulkAction" style="position:relative;float:left">
                            <option>Select an action</option>
                            <option>Delete Selected</option>
                        </select>
                    </button>
                    &nbsp;&nbsp;
                    <button type="button" class="btn btn-red btn-flat btn-ripple" data-ajax-loader="ldrBulk@(Model.Pagination.FilterActionName)Placeholder" data-ajax-json-data='{ "PrimaryKeys" : key, "action": value }' data-ajax-url="@Url.Action(Model.BulkActionName, Model.Pagination.controllerName,null,Request.Url.Scheme)" id="btnMultiSubmit"> <i id="ldrBulk@(Model.Pagination.FilterActionName)Placeholder" style="display:none" class="CircleLoader"></i>Submit</button>
                </div>
                <div class="btn-group btn-merged btn-group-sm pull-right">
                    <button type="button" id="btnAddNew" data-prepend="filter@(Model.Pagination.FilterActionName)Container" data-ajax-loader="ldrAdd@(Model.Pagination.FilterActionName)Placeholder" data-ajax-url="@Url.Action(Model.InsertActionName, Model.Pagination.controllerName,null,Request.Url.Scheme)" class="btn btn-green btn-flat btn-ripple"><i id="ldrAdd@(Model.Pagination.FilterActionName)Placeholder" style="display:none" class="CircleLoader"></i> Add New</button>
                </div>
            </div>
        </div>

    </div>
</div>
